# ==================== REQUIRED CONFIGURATION ====================

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram: https://t.me/BotFather
BOT_TOKEN=your_bot_token_here

# ==================== OPTIONAL CONFIGURATION ====================

# Debug mode - Set to True to enable detailed logging (True/False)
DEBUG=False

# Admin User IDs - Comma-separated list of admin Telegram user IDs
# Example: ADMIN_IDS=123456789,987654321
ADMIN_IDS=

# Bot Username (optional, will be auto-detected if not set)
BOT_USERNAME=

# ==================== API CONFIGURATION ====================

# API timeout in seconds
API_TIMEOUT=30

# Number of API retry attempts
API_RETRY_COUNT=3

# Custom API Key (if integrating with external services)
CUSTOM_API_KEY=

# Database URL (if using a database)
# Example: DATABASE_URL=sqlite:///bot.db
DATABASE_URL=

# ==================== FEATURE FLAGS ====================

# Enable/disable bot features (True/False)
ENABLE_GROUP_CHAT=True
ENABLE_PRIVATE_CHAT=True
ENABLE_PHOTO_HANDLING=True
ENABLE_DOCUMENT_HANDLING=True

# ==================== LOGGING CONFIGURATION ====================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=bot.log

# ==================== MESSAGE SETTINGS ====================

# Maximum message length before truncation
MAX_MESSAGE_LENGTH=4096

# Command prefix (default is /)
COMMAND_PREFIX=/
